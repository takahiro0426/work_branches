        <li class="nav-item active">
          <%= link_to "コミュニティを作る", new_community_path, class: "nav-link" %><span class="sr-only">(current)</span>
        </li>

        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, class: "nav-link", method: :delete %>
