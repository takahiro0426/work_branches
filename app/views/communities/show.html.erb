
<% @posts.each do |post| %>
<div class="jumbotron jumbotron-fluid bg-white border rounded-left pt-2">
  <div class="container">
    <h4>ーー<%= post.created_at.strftime('%Y/%m/%d') %>ーー</h4>
    <div class="row border-top border-bottom">
    <h4 class="col-lg-7 mb-0">【<%= post.title %>】</h4><h5 class="col-lg-4 offset-lg-1 mb-0"><%= post.user.name %> <small class="text-muted"><%= post.created_at.strftime('%H:%M') %></small></h5>
    </div>
    <div class="row pt-3">
      <div class="col-lg-7">
    <%= attachment_image_tag post, :image, :fill, 600, 300 %>
  </div>
  <div class="col-lg-4 offset-lg-1">
    <p><%= post.caption %></p>
  </div>
  </div>
    <p class="lead"><%= post.tag_id %></p>
  </div>
</div>
<% end %>
<%= render partial: 'community_posts/new_community_post' %>