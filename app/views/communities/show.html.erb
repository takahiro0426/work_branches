<% if params[:post_community_id] %>
  <%= render 'show_select_post' %>
<% end %>
<% @posts.each do |post| %>
  <%= link_to community_path(@community, post_community_id: post.id), class: "btn btn-block card bg-white border rounded mb-4" do %>
      <h4>ーー<%= post.created_at.strftime('%Y/%m/%d') %>ーー</h4>
      <div class="border-top border-bottom">
        <div class="row">
          <h4 class="col-lg-7 mb-0">【<%= post.title %>】</h4>
          <h5 class="col-lg-5 mb-0"><%= post.user.name %> <small class="text-muted"><%= post.created_at.strftime('%H:%M') %></small></h5>
        </div>
      </div>
      <div class="row pt-3">
        <div class="col-lg-7">
          <%= post.caption %>
          <%= attachment_image_tag post, :image, class:"attachment_image" %>
        </div>
        <div class="col-lg-5">
          <% post.post_comments.each do |post_comment| %>
            <%= post_comment.comment %>
          <% end %>
        </div>
      </div>
  <% end %>
  <% unless params[:post_community_id] %>
    <%= render 'community_post_form' %>
  <% end %>
<% end %>
